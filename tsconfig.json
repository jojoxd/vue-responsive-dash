{
  "extends": "@jojoxd/tsconfig/config/frontend",

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
//    "types": [
//      "webpack-env",
//      "jest",
//      "vue",
//      "vue-demi",
//      "@interactjs/actions",
//      "@interactjs/core"
//    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@interactjs",
      "./node_modules/vue-demi",
      "./node_modules/vue"
    ],
    "lib": [
      "esnext",
      "es5",
      "es6",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
